{
  "name": "reactivus",
  "version": "0.2.40",
  "description": "React Based UI Components Package To Facilitate Web Front End Development - By Ccorgz",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist",
    "src"
  ],
  "homepage": "https://www.ccorgz.com/reactivus",
  "keywords": [
    "reactivus",
    "react",
    "javascript",
    "alert",
    "dialog",
    "button",
    "toast",
    "notification",
    "push",
    "select",
    "tag",
    "switch"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run copyStyles:cjs && npm run copyStyles:esm",
    "build:esm": "tsc",
    "build:cjs": "tsc --module CommonJS --outDir dist/cjs",
    "copyStyles:cjs": "xcopy /E /I /Y src\\styles dist\\cjs\\styles",
    "copyStyles:esm": "xcopy /E /I /Y src\\styles dist\\esm\\styles"
  },
  "author": "ccorgz (https://ccorgz.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.2",
    "@types/react": "^17.0.80",
    "@types/react-dom": "^17.0.25",
    "react": "^18.0.0",
    "react-dom": "^18.3.1",
    "typescript": "^4.5.2"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
